{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "New Task Card",
            "wrap": true
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Choice 1",
                    "value": "Choice 1"
                },
                {
                    "title": "Choice 2",
                    "value": "Choice 2"
                }
            ],
            "placeholder": "Placeholder text",
            "label": "Taskee",
            "id": "Taskee"
        },
        {
            "type": "Input.Text",
            "label": "Description",
            "id": "desc",
            "placeholder": "Dust the trumphy, expell the earwigs, etc"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Small (5 minutes)",
                    "value": "Small"
                },
                {
                    "title": "Medium (15 minutes)",
                    "value": "Medium"
                },
                {
                    "title": "Large (30 minutes)",
                    "value": "Large"
                },
                {
                    "title": "XLarge (30+ minutes)",
                    "value": "XLarge"
                }
            ],
            "placeholder": "Select estimated task time",
            "label": "Estimated Time",
            "id": "estTime"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Daily",
                    "value": "Daily"
                },
                {
                    "title": "Weekly",
                    "value": "Weekly"
                }
            ],
            "label": "Frequency",
            "id": "Frequency",
            "placeholder": "How often do we want to do this?"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Action.Submit"
                }
            ]
        }
    ]
}
